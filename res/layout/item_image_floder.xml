<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3300FF00"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp" >
    <ImageView
        android:id="@+id/img_cover"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <View 
        android:id="@+id/view_center_holder"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_centerVertical="true"/>
    <TextView 
        android:id="@+id/tlt_name"
        android:text="name"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        android:background="#8833FF33"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_cover"
        android:layout_centerVertical="true"/>
    <TextView 
        android:id="@+id/tlt_chosen_num"
        android:visibility="visible"
        android:text="0"
        android:textColor="#33FF33"
        android:checked="true"
        android:clickable="false"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_cover"
        android:layout_below="@id/view_center_holder"
        android:layout_marginTop="10dp"/>
    <TextView 
        android:id="@+id/tlt_num"
        android:text="num"
        android:singleLine="true"
        android:shadowColor="#88000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tlt_name"
        android:layout_centerVertical="true"/>
</RelativeLayout>