<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0000FF00"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp" >
    <TextView 
        android:id="@+id/tlt_time"
        android:text="2014"
        android:textSize="18sp"
        android:textColor="@color/txt_dark"
        android:shadowColor="#000000"
        android:paddingTop="12dp" android:paddingBottom="10dp"
        android:paddingLeft="5dp" android:paddingRight="3dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
    <TextView 
        android:id="@+id/tlt_select_all"
        android:visibility="invisible"
        android:text="全选"
        android:padding="3dp"
        android:textColor="@color/txt_dark"
        android:shadowColor="#000000"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    
    <CheckBox 
        android:id="@+id/check_day_images"
        android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
    <GridView 
        android:id="@+id/grid_images"
        android:numColumns="4"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:scrollbars="none"
        android:fadeScrollbars="false"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@id/tlt_time" >
        
    </GridView>
</RelativeLayout>